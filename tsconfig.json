{
  "compilerOptions": {
  "target": "ES2017",
  "lib": ["dom", "dom.iterable", "esnext"],
  "allowJs": true,
  "skipLibCheck": true,
  "strict": true,
  "noEmit": false,
  "esModuleInterop": true,
  "module": "CommonJS", 
  "moduleResolution": "node",
  "resolveJsonModule": true,
  "isolatedModules": true,
  "jsx": "preserve",
  "incremental": true,
  "outDir": "./dist",
  "plugins": [
    {
      "name": "next"
    }
  ],
  "paths": {
    "@/*": ["./*"]
  }
},
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "server.js"],
  "exclude": ["node_modules"]
}
